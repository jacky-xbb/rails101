<div class="col-md-12">
  <div class="group">
    <%= link_to("New group", new_group_path, class: "btn btn-primary float-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Creator</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= render_group_description(group) %></td>
          <td><%= group.user.email %></td>
          <td>
            <% if user_signed_in? %>
              <%= link_to("Edit", edit_group_path(group), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", delete_group_path(group), class: "btn btn-sm btn-default",
                          data: { confirm: "Are you sure?" })%>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
